<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <title>World Wines</title>



    <link rel="canonical" href="https://getbootstrap.com/docs/4.5/examples/album/" />

    <!-- Bootstrap core CSS -->
    <link href="../../css/custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />

    <link href="css/album.css" rel="stylesheet" />
</head>

<body>
    <%- include('common/header'); -%>
        <section class="gradient-custom p-4 h-100">
            <div class="container bg-light rounded">

                
                <% competency.forEach(competency=> {

                    %>

                    <div class=" px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
                        <h1 class="display-4"><%= competency._id %></h1>
                        <p class="lead">
                            <%= competency.description %>
                        </p>
                      </div>
                    
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Level</th>
                                <th scope="col">Indicator</th>
                                <th scope="col">Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% competency.levels.forEach(level=> {

                                %>
                                <tr>
                                    <td>
                                        <%= level.level %>
                                    </td>
                                    <td>
                                        <%= level.indicator %>
                                    </td>
                                    <td>
                                        <% level.roles.forEach(role=> {

                                            %>
                                            <b>
                                                <%= role.career %>
                                            </b> : <%= role.role %>
                                                <br>

                                                <% }); %>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                    <a type="button"  class="btn btn-primary" href="/competencies/edit/<%= competency._id %>">Edit</a>

                    <% }); %>

            </div>
        </section>






