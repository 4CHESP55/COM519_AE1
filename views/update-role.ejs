    <link rel="canonical" href="https://getbootstrap.com/docs/4.5/examples/album/" />

    <!-- Bootstrap core CSS -->
    <link href="../css/custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />

</head>

<body>
    <%- include('common/header'); -%>
        <section class="gradient-custom p-4 h-100">
            <div class="container bg-light rounded">
                <div class=" px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
                    <h1 class="display-4">Update Role</h1>
                    <p class="lead">
                        Update the below Role!
                    </p>
                  </div>
                <div class="row justify-content-md-center">
                    <div class="col-">
                        <form method="POST">
                            <div class="form-group">
                                <label for="career">Career</label>
                                <input value="<%= role.career %>" type="text" class="form-control" id="career" name="career"
                                    placeholder="Enter Career" />
                            </div>
                            <div class="form-group">
                                <label for="role">Role</label>
                                <input value="<%= role.role %>" type="text" class="form-control" id="role" name="role"
                                    placeholder="Enter Role" />
                            </div>
                            <div class="form-group">
                                <label for="competency">Competency</label>
                                <input value="<%= role.competency %>" type="text" class="form-control" id="competency" name="competency"
                                    placeholder="Enter Competency" />
                            </div>
                            <div class="form-group">
                                <label for="level">Level</label>
                                <input value="<%= role.level %>" type="text" class="form-control" id="level" name="level"
                                    placeholder="Enter Level" />
                            </div>

                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>

            </div>
        </section>






