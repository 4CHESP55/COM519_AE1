<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <title>World Wines</title>



    <link rel="canonical" href="https://getbootstrap.com/docs/4.5/examples/album/" />

    <!-- Bootstrap core CSS -->
    <link href="css/custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />

    <link href="css/album.css" rel="stylesheet" />
</head>

<body>
    <%- include('common/header'); -%>
        <section class="gradient-custom p-4 h-100">
            <div class="container bg-light rounded">



                <div class=" px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
                    <h1 class="display-4">Competencies</h1>
                    <p class="lead">
                        Here is a view of all of the competencies in the system. Go ahead and view some of them to edit or add more!
                    </p>
                  </div>

                <div class="row row-cols-1 row-cols-md-4 g-4">
                    <% competencies.forEach(competency=> {

                        %>

                        <div class="col">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= competency._id %>
                                    </h5>
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <% competency.levels.forEach(level=> {
                                            level.roles.forEach(role=> {
                                            %>
                                            <%= role.career %>,
                                                <% });}); %>
                                    </h6>
                                    <p class="card-text">
                                        <%= competency.description %>
                                    </p>
                                    <a href="/competencies/view/<%= competency._id %>" class="btn btn-primary">View</a>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>

            </div>
        </section>






